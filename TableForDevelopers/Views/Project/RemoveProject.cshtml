@model TableForDevelopers.Models.ProjectModel
@using (Html.BeginForm()) 
{
@Html.AntiForgeryToken()
<div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title">Создать проект</h3>
        @Html.ValidationSummary(false)
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times</span>
        </button>
    </div>
    <div class="modal-body">
        <label>Название проекта:</label>
        @Html.DropDownListFor(model => model.ProjectName, new SelectList(ViewBag.Projects))
    </div>
    <div class="modal-footer">
        <button id="CancelRemoveButton" class="btn btn-secondary" value="Cancel" data-dismiss="modal">Отмена</button>
        <button id="AcceptRemoveButton" type="submit" class="btn btn-danger">Удалить</button>
    </div>
</div>
}
