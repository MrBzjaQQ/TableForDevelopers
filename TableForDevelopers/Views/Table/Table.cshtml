@model List<List<TableForDevelopers.Models.CardModel>>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/tableScripts")
<div>
    @if(ViewBag.IsAuth != null)
    {
    if(ViewBag.IsAuth && ViewBag.UserType == "TeamLeader")
    {
    <ul class="nav">
        <li class="nav-item">
            @Html.ActionLink("Создать карточку", "CreateCard", "Table", null, new {@class = "nav-link CreateCard"})
        </li>
    </ul>
    }
    }
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-center"style="width: 20%;">Backlog</th>
                <th scope="col" class="text-center"style="width: 20%;">Analyse</th>
                <th scope="col" class="text-center"style="width: 20%;">Developing</th>
                <th scope="col" class="text-center"style="width: 20%;">Testing</th>
                <th scope="col" class="text-center"style="width: 20%;">Done</th>
            </tr>
            @foreach(var row in Model)
            {
            <tr>
                @foreach(var card in row)
                {
                <td>
                    @if(card != null)
                    {
                    <div class="@card.CardClass" style="max-width: 20rem;"> 
                        <div class="card-header">
                            <h5 class="card-title">@card.Header</h5>
                        </div>
                        <div class="@card.CardBodyClass">
                            @Html.ActionLink(card.Description.Length > 20 ? card.Description.Substring(0, 20) + "..." : card.Description, "Card", "Table", new { id = card.CardID }, new {@class = "aboutCard"})<br />
                            Разработчик: @card.AppointedDeveloper
                        </div>
                    </div>
                    }
                </td>
                 }
            </tr>
            }
  </thead>
    </table>
</div>