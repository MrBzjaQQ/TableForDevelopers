@model TableForDevelopers.Models.PasswordRecoveryModel
@{
    ViewBag.Title = "ForgotPasswordConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using(Html.BeginForm())
{
@Html.AntiForgeryToken()
<div>
    <h3 class="modal-title">
        Восстановление пароля
    </h3>
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label for="passwordInput">Введите пароль:</label>
        <!--<input type="text" id="loginInput" class="form-control" placeholder="Введите Ваш логин" />-->
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id="passwordInput", @placeholder="Passw0rd123"}, })
    </div><div class="form-group">
        <label for="passwordConfirmInput">Повторите пароль:</label>
        <!--<input type="text" id="loginInput" class="form-control" placeholder="Введите Ваш логин" />-->
        @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", @id="passwordConfirmInput", @placeholder="Passw0rd123"}, })
    </div>
     <button id="AcceptResetButton" type="submit" class="btn btn-success">Изменить пароль</button>
</div>
}