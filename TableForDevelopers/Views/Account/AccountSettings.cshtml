            <li class="list-group-item">@Html.ActionLink("Сброс пароля", "PasswordReset", "Account", new {UserId = ViewBag.UserId}, null)</li>
            @if(ViewBag.IsTwoFactorEnabled)
            {
                <!--<li class="list-group-item">@Html.ActionLink("Отключить двухфакторную аутентификацию", "DisableTwoFactorAuth", "Account", new {UserId = ViewBag.UserId}, new {@class="DisableTwoFactorAuth"})</li>-->
